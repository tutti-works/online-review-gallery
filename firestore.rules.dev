rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/userRoles/$(request.auth.token.email))
        && get(/databases/$(database)/documents/userRoles/$(request.auth.token.email)).data.role == 'admin';
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isShowcaseDomainAllowed() {
      return request.auth != null
        && request.auth.token.email != null
        && request.auth.token.email.matches('.*@([A-Za-z0-9-]+\\.)*musashino-u\\.ac\\.jp$');
    }

    // Emulator-only: allow users to self-create/update their role doc.
    match /userRoles/{email} {
      allow read: if isAuthenticated() && request.auth.token.email == email;
      allow create, update: if isAuthenticated() && request.auth.token.email == email;
      allow delete: if isAdmin();
    }

    match /galleries/{galleryId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /artworks/{artworkId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /likes/{likeId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow delete: if isAdmin() && resource.data.userEmail == request.auth.token.email;
    }

    match /showcaseGalleries/{galleryId} {
      allow read: if isAuthenticated() && isShowcaseDomainAllowed();
      allow write: if isAdmin() && isShowcaseDomainAllowed();
    }

    match /importJobs/{jobId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
